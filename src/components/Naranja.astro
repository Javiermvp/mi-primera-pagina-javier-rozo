---
import { Icon } from "astro-icon/components";
import { imageConfig } from "astro:assets";

interface Props {
    title: string;
    price: number;
    img: string;
}

const title = Astro.props.title;
const dolitas = Astro.props.price;
const foto = Astro.props.img;
---

<div>
    <img src={foto} alt="" />

    <div class="container"> 
        <p class="letras-de-imagenes"> {title}</p>
        <Icon name={"like"} />
    </div>
    <div class="container">
        <p>${dolitas}</p>
        <p>envio gratis</p>
    </div>
    <button>comprar</button>
</div>

<style>

    img {
        width: 100%;
        height: 300px;
        object-fit: contain;
    }
    button {
        background-color: rgb(221, 104, 15);
        color: white;
        padding: 7px 20px;
        border-radius: 7px;
        font-weight: 700;
        border: solid 2px rgb(0, 1, 0);
    }
    .letras-de-imagenes {
    font-weight: 600;
    font-size: 20px
    }
    .container {
        display: flex;
        align-items: center;
        justify-content: space-between;
    
    }

</style>
